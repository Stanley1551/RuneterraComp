<Window x:Class="RuneterraCompanion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuneterraCompanion"
        mc:Ignorable="d"
        Background="DarkGray"
        Title="Runeterra Companion" Height="720" Width="1280" ResizeMode="NoResize">
    <TabControl x:Name="MainTabControl" Background="DarkGray"
        BorderBrush="DarkGray">

        <TabItem Header="My cards" Background="DarkGray">
            <local:MyCardsTab x:Name="MyCardsTab"/>
        </TabItem>
        <TabItem Header="Opponent cards" Background="DarkGray">
            <Grid Background="DarkGray"/>
        </TabItem>
        <TabItem Header="Settings" Background="DarkGray">
            <local:SettingsTab x:Name="SettingsTab"/>
        </TabItem>
    </TabControl>

</Window>
