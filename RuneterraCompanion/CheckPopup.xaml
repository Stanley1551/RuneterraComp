<Window x:Class="RuneterraCompanion.CheckPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuneterraCompanion"
        mc:Ignorable="d"
        Background="DarkGray"
        Title="Check file integrity" Height="180" Width="470" ResizeMode="NoResize">
    
    <StackPanel>
        <Label Content="Checking files locally..." HorizontalAlignment="Center" Margin="0,5,0,0" Name="CurrentOperationLabel"></Label>
        <ProgressBar Name="CheckingProgressBar" Width="400" Height="25" Margin="0,20,0,0" Foreground="#FF5962BF" />
        <TextBlock Name="DownloadPercentageText" HorizontalAlignment="Center" VerticalAlignment="Center">0%</TextBlock>
        <Button Name="CancelButton" Click="CancelButton_Click" Content="Cancel" Width="50" Margin="0,20,0,0"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </StackPanel>
    
</Window>
